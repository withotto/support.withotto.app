---
interface Props {
    id: string
}

const {id} = Astro.props
---

<style>
    iframe {
        position: absolute;
        inset: 0;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    div {
        position: relative;
        width: 100%;
        overflow: hidden;
        z-index: 99999;
        box-sizing: border-box;
        padding-bottom: calc(118.33910035% + 32px)
    }
</style>

<div class="not-content">
    <iframe src={`https://www.guidejar.com/embed/${id}?type=1&controls=on`} width="100%" height="100%" allowfullscreen
            frameborder="0"></iframe>
</div>
